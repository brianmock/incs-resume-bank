<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Please fill out the form below to register as a School Leader.</h3>
  <h4>We recommended using your work email to speed up the process of verification.</h4>
  <br>

  <%= f.hidden_field :access, value: "pending" %>
  <div class="field field-flex">
    <%= f.label :first_name, :class => 'teacher-label' %><br>
    <%= f.text_field :first_name, size: 45 %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :last_name, :class => 'teacher-label' %><br>
    <%= f.text_field :last_name, size: 45 %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :school, :class => 'teacher-label' %><br>
    <%= f.text_field :school, size: 60 %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :email, :class => 'teacher-label' %><br>
    <%= f.text_field :email, size: 45 %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :email_confirmation, :class => 'teacher-label' %><br>
    <%= f.text_field :email_confirmation, size: 45 %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :password, :class => 'teacher-label' %><br>
    <%= f.password_field :password %><br>
  </div>
  <div class="field field-flex">
    <%= f.label :password_confirmation, :class => 'teacher-label' %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit 'Register', :name => 'register', :class => "btn btn-info" %>
  </div>
   <br>

<% end %>
