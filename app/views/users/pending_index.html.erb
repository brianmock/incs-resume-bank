<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>
<h3><%= @users.count %> Results:</h3>
<% @users.each do |user| %>
<div class="result">
  <br>
  <label>School:</label> <%= user.school %><br>
  <label>Name:</label> <%= user.prefix %> <%= user.first_name %> <%= user.last_name %><br>
  <label>Email: </label> <%= user.email %><br>
  <label>Status:</label> <%= user.access %><br>
  <%= button_to "Activate", "/users/#{user.id}/activate", method: :put, class: "btn btn-info" %><br>
  <%= button_to "Delete", user, method: :delete, class: "btn btn-danger" %>
</div>
<% end %>
